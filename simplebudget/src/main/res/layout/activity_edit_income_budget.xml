<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.quebecfresh.androidapp.simplebudget.EditIncomeBudgetActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/name"
            android:id="@+id/textViewName"
            android:layout_weight="10"
            android:gravity="left|center_vertical" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextName"
            android:layout_weight="20"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/accounts"
            android:id="@+id/textView5"
            android:layout_weight="10"
            android:gravity="left|center_vertical" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/accounts"
            android:id="@+id/buttonAccount"
            android:layout_weight="20" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/category"
            android:id="@+id/textViewCategory"
            android:layout_weight="10"
            android:gravity="left|center_vertical" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerGroup"
            android:layout_weight="20"
            android:layout_gravity="center_vertical|right" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/cycle"
            android:id="@+id/textViewCycle"
            android:layout_weight="10"
            android:gravity="left|center_vertical" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerCycle"
            android:layout_weight="20"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/budget_amount"
            android:id="@+id/textViewAmount"
            android:layout_weight="10"
            android:gravity="left|center_vertical" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextAmount"
            android:layout_weight="20"
            android:inputType="numberDecimal"
            android:layout_gravity="center_vertical"
            android:gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/roll_over"
            android:id="@+id/textViewRollover"
            android:layout_weight="10"
            android:gravity="left|center_vertical" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20">

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/roll_over"
                android:id="@+id/checkBoxRollover"
                android:gravity="left|center_vertical"
                android:layout_weight="10"
                android:layout_gravity="left" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="\?"
                android:id="@+id/buttonWhatIsRollover"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="right"
                android:layout_weight="10"
                android:onClick="showWhatIsRollover" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/note"
            android:id="@+id/textView9"
            android:layout_weight="10"
            android:gravity="left|center_vertical" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextNote"
            android:layout_weight="20"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

</LinearLayout>
