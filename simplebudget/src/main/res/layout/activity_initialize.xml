<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.quebecfresh.androidapp.simplebudget.InitializeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/welcome_message"
                android:id="@+id/textViewWelcome"
                android:layout_weight="30"
                android:textSize="25dp"
                android:gravity="left|center_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="1"
                android:id="@+id/buttonInitializeAccount"
                android:layout_weight="10"
                android:background="@color/light_red"
                android:textSize="50dp"
                android:layout_marginTop="10dp"
                android:onClick="initializeAccount" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="2"
                android:id="@+id/buttonInitializetIncome"
                android:layout_weight="10"
                android:background="@color/light_red"
                android:textSize="50dp"
                android:layout_marginTop="10dp"
                android:onClick="budgetIncome" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="3"
                android:id="@+id/buttonInitializeExpense"
                android:layout_weight="10"
                android:background="@color/light_red"
                android:textSize="50dp"
                android:layout_marginTop="10dp"
                android:onClick="budgetExpense" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Go"
                android:id="@+id/buttonReadyToGo"
                android:layout_weight="10"
                android:layout_marginTop="10dp"
                android:background="@color/light_blue"
                android:textSize="50dp"
                android:onClick="go" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
