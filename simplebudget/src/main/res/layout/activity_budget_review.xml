<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.quebecfresh.androidapp.simplebudget.BudgetReviewActivity">


    <LinearLayout style="@style/detailRowStyle">

        <TextView
            android:text="@string/budget_cycle"
            android:id="@+id/textViewCycle"
            style="@style/detailFirstColumnStyle"/>

        <Spinner style="@style/detailSecondColumnSpinnerStyle"
            android:id="@+id/spinnerCycle" />

    </LinearLayout>

    <LinearLayout style="@style/detailRowStyle">

        <TextView
            android:text="@string/your_income"
            android:id="@+id/textViewIncome"
            style="@style/detailFirstColumnStyle"/>

        <Button
            android:text="25325.25"
            android:id="@+id/buttonIncomeBudget"
            style="@style/detailSecondColumnButtonStyle"
            android:textColor="@color/dark_blue"
            android:onClick="showIncomeBudget" />
    </LinearLayout>

    <LinearLayout style="@style/detailRowStyle">

        <TextView style="@style/detailFirstColumnStyle"
            android:id="@+id/textView" />

        <TextView style="@style/detailSecondColumnTextViewStyle"
            android:text="Subtract"
            android:id="@+id/textViewSubtract" />
    </LinearLayout>

    <LinearLayout style="@style/detailRowStyle">

        <TextView style="@style/detailFirstColumnStyle"
            android:text="@string/your_expense"
            android:id="@+id/textViewExpense" />

        <Button style="@style/detailSecondColumnButtonStyle"
            android:text="35451.24"
            android:id="@+id/buttonExpenseBudget"
            android:textColor="@color/deep_pink"
            android:onClick="showExpenseBudget" />
    </LinearLayout>

    <LinearLayout style="@style/detailRowStyle">

        <TextView style="@style/detailFirstColumnStyle"
            android:text="@string/your_surplus"
            android:id="@+id/textView11" />

        <TextView style="@style/detailSecondColumnTextViewStyle"
            android:id="@+id/textViewSurplus"
            android:text="2541.25"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView style="@style/detailRowStyle"
        android:text="Are you satisfy with this result?"
        android:id="@+id/textView24"
        android:textSize="18dp"
        android:textStyle="bold|italic" />

    <Button style="@style/detailRowStyle"
        android:text="Yes, start follow this budget."
        android:id="@+id/buttonYes"
        android:onClick="startUseBudget" />

    <Button style="@style/detailRowStyle"
        android:text="No, Fine tune my budget."
        android:id="@+id/buttonNo"
        android:onClick="fineTuneBudget" />

</LinearLayout>
