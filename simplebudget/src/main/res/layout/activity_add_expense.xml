<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.quebecfresh.androidapp.simplebudget.AddExpenseActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/name"
            android:id="@+id/textViewName"
            android:layout_weight="10"
            android:gravity="left|center_vertical" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextName"
            android:layout_weight="30"
            android:layout_gravity="center_vertical|right" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/accounts"
            android:id="@+id/textViewAccounts"
            android:layout_weight="10"
            android:layout_gravity="center_vertical"
            android:gravity="left|center_vertical" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_weight="30"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Budget"
            android:id="@+id/textViewExpenseBudget"
            android:layout_weight="10"
            android:layout_gravity="left|center_vertical"
            android:gravity="left|center_vertical" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerExpenseBudget"
            android:layout_weight="30"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/amount"
            android:id="@+id/textViewExpenseAmount"
            android:layout_weight="10"
            android:layout_gravity="left|center_vertical"
            android:gravity="left|center_vertical" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editTextExpenseAmount"
            android:layout_weight="30"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/date"
            android:id="@+id/textViewExpenseDate"
            android:layout_weight="10"
            android:layout_gravity="left|center_vertical"
            android:gravity="left|center_vertical" />

        <DatePicker
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/datePicker"
            android:layout_weight="30"
            android:layout_gravity="center_vertical"
            android:startYear="2015"
            android:calendarViewShown="false" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/note"
            android:id="@+id/textViewExpenseNote"
            android:layout_weight="10"
            android:gravity="left|center_vertical" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextExpenseNote"
            android:layout_gravity="center_vertical"
            android:layout_weight="30"
            android:gravity="center_vertical" />

    </LinearLayout>

</LinearLayout>
